<Window x:Class="adonetCourseProject.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:adonetCourseProject"
        mc:Ignorable="d"
        Title="Authorization" Height="400" Width="600" Background="#FF016E9D">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>


        <Border Background="White"
                CornerRadius="10"
                Padding="15,30,15,15"
                Width="340"
                Margin="10,30,10,30">
            <Border.Effect>
                <DropShadowEffect Color="#FF5B5A5A" Direction="280"/>
            </Border.Effect>
            <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    TextBlock.TextAlignment="Center"
                    Margin="10 2 10 40">
                <TextBlock Text="Пожалуйста авторизуйтесь" FontSize="18" FontStyle="Italic" Foreground="#FF0700DB" FontWeight="Thin" Margin="10 10 10 20 "/>
                <TextBox Style="{StaticResource tbLogin}" Tag="Логин" Name="tbLogin" Width="270" Height="40" FontSize="22" BorderBrush="#FF0700DB"/>
                <PasswordBox Style="{StaticResource pbPassword}" Tag="Пароль" Name="pbPassword" Width="270" Height="40"  FontSize="22" BorderBrush="#FF0700DB" ToolTip=""/>

                <Button Style="{StaticResource btnEnter}" Name="btnLogin" Content="Войти"  Click="btnLogin_Click" Height="50" Width="190" FontStyle="Italic" FontSize="24" FontWeight="ExtraBold" Background="#FF004462" Margin="10 40 10 0">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="3" ShadowDepth="2"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>

    </Grid>
</Window>
