<Window x:Class="adonetCourseProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:adonetCourseProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <ListView Name="lvEmployee" ItemsSource="{Binding Employees}" Width="600" HorizontalAlignment="Left" Height="383" SelectionChanged="lvEmployee_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding FirstName}" Width="150">Имя</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding LastName}" Width="150">Фамилия</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Phone}" Width="150">Телефон</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Position.Name}" Width="150">Должность</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel VerticalAlignment="Bottom">
            <StatusBar>
                <StatusBarItem>
                    <Label Name="lblEmployeeCount" Content= "" FontSize="15" ContentStringFormat="Количество работников: {0}" />
                </StatusBarItem>
            </StatusBar>
        </StackPanel>    
    </StackPanel>
    
</Window>
