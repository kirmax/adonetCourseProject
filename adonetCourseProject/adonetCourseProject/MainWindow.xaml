<Window x:Class="adonetCourseProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:adonetCourseProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="780" >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <TextBox HorizontalAlignment="Center"  Grid.Row="0" Margin=" 0 10" Width="150" Style="{StaticResource tbSearch}"/>
        <StackPanel Grid.RowSpan="2" Panel.ZIndex="1" HorizontalAlignment="Left" Style="{StaticResource spSlideLeft}"  Width="200" x:Name="spLeft" Background="#FF016E9D" Margin="-150,0,0,0">
            <DockPanel VerticalAlignment="Center" HorizontalAlignment="Right" Width="200" Height="50">
                <Label Style="{DynamicResource MenuLabel}" Width="140" Content="Главная" VerticalAlignment="Center" FontFamily="Source Sans Pro" />
                <Image Margin="10 0 0 0" Width="30" Height="30" Source="images\home.png" Stretch="UniformToFill" StretchDirection="DownOnly" IsHitTestVisible="False"/> 

            </DockPanel>

            <DockPanel VerticalAlignment="Center" HorizontalAlignment="Right" Width="200" Height="50">
                <Label Style="{DynamicResource MenuLabel}" Content="Отдел кадров" Width="140" VerticalAlignment="Center" FontFamily="Source Sans Pro"/>
                <Image Margin="10 0 0 0" Width="30" Height="30" Source="images\employeement.png" Stretch="UniformToFill" StretchDirection="DownOnly" IsHitTestVisible="False"/>

            </DockPanel>


        </StackPanel>
        <DataGrid AutoGenerateColumns="False" Name="dgEmployee" Grid.Row="2" Margin="50 0 0 0" ItemsSource="{Binding employees}" Style="{DynamicResource dgEmployees}">
            
            <DataGrid.Columns >
                <DataGridTemplateColumn Header="Фото" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Photo}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Имя" Binding="{Binding Path=FirstName}" />
                <DataGridTextColumn Binding="{Binding  Path=MiddleName}"  Header="Отчество"/>
                <DataGridTextColumn Binding="{Binding  Path=LastName}" Header="Фамилия"/>
                <DataGridTextColumn Binding="{Binding  Path=Address}" Header="Адрес"/>
                <DataGridTextColumn Binding="{Binding  Path=Phone}"  Header="Телефон"/>
                <DataGridTextColumn Binding="{Binding  Path=DateView}" Width="100" Header="Дата рождения"/>
                <DataGridTextColumn Binding="{Binding  Path=Email}" Header="Почта"/>
                <DataGridTextColumn Binding="{Binding  Path=Salary}" Header="Зарплата"/>
                <DataGridTextColumn Binding="{Binding  Path=Reward}" Header="Премия"/>
                <DataGridTextColumn Binding="{Binding  Path=Position.Name}"  Header="Должность"/>
            </DataGrid.Columns>
            
        </DataGrid>
