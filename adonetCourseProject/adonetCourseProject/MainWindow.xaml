<Window x:Class="adonetCourseProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:adonetCourseProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="780">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>

        <StackPanel Panel.ZIndex="2" Style="{StaticResource spSlideLeft}" x:Name="spLeft" Background="#2D3446" Width="200" Margin="-150,0,725,0">
            <DockPanel VerticalAlignment="Center" HorizontalAlignment="Right" Width="200" Height="50">
                <Label Style="{DynamicResource MenuLabel}" Width="140" Content="Главная" VerticalAlignment="Center" FontFamily="Segoe UI Semibold" />


            </DockPanel>

            <DockPanel VerticalAlignment="Center" HorizontalAlignment="Right" Width="200" >
                <Label Style="{DynamicResource MenuLabel}" Content="отдел кадров" Width="140" VerticalAlignment="Center" FontFamily="Source Sans Pro"/>


            </DockPanel>
            

        </StackPanel>

        <ListView x:Name="lvEmployee" ItemsSource="{Binding Employees}" Margin="50,0,0.333,-0.333">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Photo}" Width="100" Header="Фото"/>
                    <GridViewColumn DisplayMemberBinding="{Binding FirstName}" Width="100" Header="Имя"/>
                    <GridViewColumn DisplayMemberBinding="{Binding MiddleName}" Width="100" Header="Отчество"/>
                    <GridViewColumn DisplayMemberBinding="{Binding LastName}" Width="100" Header="Фамилия"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Address}" Width="100" Header="Адрес"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Phone}" Width="100" Header="Телефон"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Birthdate.Date}" Width="100" Header="Дата рождения"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Email}" Width="100" Header="Почта"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Salary}" Width="100" Header="Зарплата"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Reward}" Width="100" Header="Премия"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Position.Name}" Width="100" Header="Должность"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
